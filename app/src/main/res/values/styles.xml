<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/app_background</item>
        <item name="alertDialogTheme">@style/dialog</item>
    </style>

    <style name="AsteroidTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="AsteroidText">
        <item name="android:textSize">@dimen/desc_text_size</item>
    </style>

    <style name="dialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>
</resources>
